<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juegos"
            android:id="@+id/miplan_bienvenida_text"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30dp"
            android:textColor="#666666"
            android:paddingBottom="30dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Quiz: Información de sismos"
            android:id="@+id/button_quiz"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#0174DF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginBottom="18dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Quiz: Información de prevención"
            android:id="@+id/button_quiz2"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#0174DF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginBottom="18dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="AnkiDroid"
            android:id="@+id/button_anki"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#0174DF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginBottom="18dp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Trofeos"
            android:id="@+id/button_trophy"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:background="#0174DF"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_marginBottom="18dp" />


    </LinearLayout>

</RelativeLayout>
