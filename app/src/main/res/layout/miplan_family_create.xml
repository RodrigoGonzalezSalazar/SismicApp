<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="8dp"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ingresa el nombre de tu Familiar"
        android:id="@+id/textView7"
        android:textColor="#666666"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center"
        android:hint="Nombre"
        android:layout_below="@+id/textView7"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:inputType="textCapSentences"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:id="@+id/linear"
        android:layout_below="@+id/editText"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:gravity="center|bottom"
        android:layout_alignParentBottom="false">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView3"
            android:background="@drawable/new_mama_unpressed"
            android:layout_margin="5dp"
            android:clickable="true" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView5"
            android:background="@drawable/new_papa_unpressed"
            android:layout_margin="5dp"
            android:clickable="true" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView4"
            android:background="@drawable/new_hijo_unpressed"
            android:layout_margin="5dp"
            android:clickable="true" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:id="@+id/imageView6"
            android:background="@drawable/new_hija_unpressed"
            android:layout_margin="5dp"
            android:clickable="true" />

    </LinearLayout>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#31B404"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>