<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/plantilla">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_lugarseguro"
                android:id="@+id/esctitulo"
                android:layout_gravity="top|center_horizontal"
                android:textSize="22dp"
                android:textStyle="bold"
                android:gravity="top" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/scrollView" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/info_lugarseguro"
                        android:id="@+id/textView"
                        android:gravity="fill_horizontal"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:textIsSelectable="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView2"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/fotolugarseguro"
                        android:layout_weight="0.19"
                        android:adjustViewBounds="false"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titulo_lugardeencuentro"
                        android:id="@+id/textView2aasc"
                        android:layout_gravity="top|center_horizontal"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:gravity="top"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/info_lugardeencuentro"
                        android:id="@+id/textView2"
                        android:gravity="fill_horizontal"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:focusableInTouchMode="true"
                        android:focusable="true"
                        android:textIsSelectable="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/fotolugarseguro2"
                        android:layout_weight="0.19"
                        android:adjustViewBounds="false" />
                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>